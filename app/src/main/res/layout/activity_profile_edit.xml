<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_profile_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorSecondary"
    tools:context="example.com.jam.ProfileEditActivity"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fNameEditText"
        android:hint="First Name"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:textSize="25dp"
        android:background="@drawable/shapeline"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/fNameEditText"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:id="@+id/lNameEditText"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shapeline"
        android:hint="Last Name" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/desc"
        android:layout_below="@+id/lNameEditText"
        android:background="@drawable/shapeline"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:hint="Bio"
        android:layout_weight="0.20" />
</LinearLayout>
