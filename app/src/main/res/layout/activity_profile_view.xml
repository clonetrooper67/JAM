<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="0.19"></LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/card_view_profile_image"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="0.19">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="Name: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/card_view_profile_name_is"
                android:layout_weight="0.11" />

            <TextView
                android:text="FirstName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/card_view_profile_name_first"
                android:layout_weight="0.90" />

            <TextView
                android:text="LastName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/card_view_profile_name_last"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="Contact: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/card_view_profile_email_is" />

            <TextView
                android:text="emailaddress@juniorachievement.net"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/card_view_profile_email"
                android:layout_weight="0.90" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Description:"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/card_view_profile_desc_is" />

            <TextView
                android:text="Your description here..."
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/card_view_profile_desc" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_view_profile_save"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>